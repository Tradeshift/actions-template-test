{
  "name": "@tradeshift/actions-template-test",
  "version": "0.0.0-semantically-released",
  "description": "Test helper for backstage scaffolder templates",
  "main": "lib/scaffold.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "test": "jest --passWithNoTests --coverage",
    "test:watch": "jest --passWithNoTests --watch",
    "all": "npm run build && npm run format-check && npm run lint && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tradeshift/actions-template-rest.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup",
    "backstage",
    "scaffold"
  ],
  "dependencies": {
    "@actions/core": "^1.5.0",
    "@backstage/backend-common": "^0.9.0",
    "@backstage/config": "^0.1.8",
    "@backstage/plugin-scaffolder-backend": "^0.15.2",
    "fs-extra": "^10.0.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.12",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.12.2",
    "@typescript-eslint/eslint-plugin": "^4.28.0",
    "@typescript-eslint/parser": "^4.28.0",
    "eslint": "^7.28.0",
    "eslint-plugin-github": "^4.1.3",
    "eslint-plugin-jest": "^24.3.6",
    "jest": "^27.0.4",
    "jest-circus": "^27.0.4",
    "prettier": "2.3.1",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.2"
  }
}
